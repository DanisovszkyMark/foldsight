<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet id="create-file_result-table" author="mark.danisovszky" dbms="postgresql">
        <comment>Creates the file_result table.</comment>

        <createTable tableName="file_result">
            <column name="id" type="VARCHAR(30)" remarks="The primary key">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk-file_result-id"/>
            </column>

            <column name="analysis_id" type="VARCHAR(30)" remarks="The id of the result owner analysis">
                <constraints nullable="false"/>
            </column>
            <column name="file_name" type="VARCHAR(255)" remarks="The name of the file">
                <constraints nullable="false"/>
            </column>
            <column name="count" type="INTEGER" remarks="The count of the file">
                <constraints nullable="false"/>
            </column>

            <column name="creation_date" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"
                    remarks="The creation date of the record">
                <constraints nullable="false"/>
            </column>
            <column name="creator_user" type="VARCHAR(30)" defaultValue="0"
                    remarks="The creator user (or system) name of the record">
                <constraints nullable="false"/>
            </column>
            <column name="last_modification_date" type="TIMESTAMP" remarks="The last modification date of the record">
                <constraints nullable="true"/>
            </column>
            <column name="last_modifier_user" type="VARCHAR(30)"
                    remarks="The last modifier user (or system) name of the record">
                <constraints nullable="true"/>
            </column>
            <column name="version" type="BIGINT" defaultValue="0"
                    remarks="The version number of the record. Incremented by 1 at every modification">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="add-constraints-to-file_result-table" author="mark.danisovszky" dbms="postgresql">
        <comment>Defines constraints for the file_result table</comment>
        <addForeignKeyConstraint baseTableName="file_result"
                                 baseColumnNames="analysis_id"
                                 referencedColumnNames="id"
                                 referencedTableName="analysis"
                                 constraintName="fk-file_result-analysis"/>
    </changeSet>
</databaseChangeLog>